<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.1.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.mapping-latest.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Property Editor</h1>
            </div>
            <div id="logindisplay">
                @@Gurupoint
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Properties", "Index", "PropertyEditor")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>

    <div id="add-dialog-container" class="dialog-container">
        <div class="dialog-body">
            <h2>Add property</h2>
            <form id="AddForm">
                <label for="Name">Name:</label><input id="Name" name="Name" type="text" /> <br />
                <label for="Type">Type:</label>
                <select id="Type" name="Type">
                    <option value="@((int)PropertyEditor.Models.property_type.integer_type)">integer</option>
                    <option value="@((int)PropertyEditor.Models.property_type.string_type)">string</option>
                </select> <br />

                <label for="Value">Value:</label><input id="Value" name="Value" type="text" /> <br />

                <button id="AddFormSumbitButton" type="submit">Add</button>
            </form>
        </div>
    </div>
</body>
</html>
