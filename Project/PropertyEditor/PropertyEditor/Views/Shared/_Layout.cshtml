<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.1.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.mapping-latest.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Property Editor</h1>
            </div>
            <div id="logindisplay">
                @@Gurupoint
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Properties", "Index", "PropertyEditor")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>

    <div id="add-dialog-container" class="dialog-container">
        <div class="dialog-body">
            <h2>Add property</h2>
            <form id="AddForm" action="/PropertyEditor/Add" method="post">
                <label for="Name-Add">Name:</label>
                <input id="Name-Add" name="Name" type="text" /> <br />

                <label for="Type-Add">Type:</label>
                <select id="Type-Add" name="Type">
                    <option value="@((int)PropertyEditor.Models.property_type.integer_type)">integer</option>
                    <option value="@((int)PropertyEditor.Models.property_type.string_type)">string</option>
                </select> <br />

                <label for="Value-Add">Value:</label>
                <input id="Value-Add" name="Value" type="text" /> <br />

                <button id="AddFormSumbitButton" type="submit">Add</button>
            </form>
        </div>
    </div>
    <div id="edit-dialog-container" class="dialog-container">
        <div class="dialog-body">

            <h2 id="property-name-Edit">Edit property: ~~~</h2>

            <form id="EditForm" action="/PropertyEditor/Edit" method="post">
                <input type="hidden" id="Name-Edit" name="Name" />
                
                <label for="Type-Edit">Type:</label>
                <select id="Type-Edit" name="Type">
                    <option value="@((int)PropertyEditor.Models.property_type.integer_type)">integer</option>
                    <option value="@((int)PropertyEditor.Models.property_type.string_type)">string</option>
                </select> <br />
                
                <label for="Value-Edit">Value:</label>
                <input id="Value-Edit" name="Value" type="text" /> <br />
                
                <button id="EditFormSumbitButton" type="submit">Save</button>
            </form>
        </div>
    </div>
</body>
</html>
