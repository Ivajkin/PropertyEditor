<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.1.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.mapping-latest.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Property Editor</h1>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>

    <div id="add-dialog-container" class="dialog-container">
        <div class="dialog-body">
            <h2>Add property</h2>
            <form id="AddForm" action="/PropertyEditor/Add" method="post">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <label for="Name-Add">Name:</label>
                            </td>
                            <td>
                            <input id="Name-Add" name="Name" type="text" />
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <label for="Type-Add">Type:</label>
                            </td>
                            <td>
                                <select id="Type-Add" name="Type">
                                    <option value="@((int)PropertyEditor.Models.property_type.integer_type)">integer</option>
                                    <option value="@((int)PropertyEditor.Models.property_type.string_type)">string</option>
                                </select>
                            </td>
                        </tr>
                        
                        <tr>
                            <td>
                                <label for="Value-Add">Value:</label>
                            </td>
                            <td>
                                <input id="Value-Add" name="Value" type="text" />
                            </td>
                        </tr>
                        
                        <tr>
                            <td>
                                <button id="AddFormSumbitButton" type="submit">Add</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</body>
</html>
